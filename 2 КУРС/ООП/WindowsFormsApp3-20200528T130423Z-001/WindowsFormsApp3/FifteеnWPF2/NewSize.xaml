<Window x:Class="FifteenWPF2.ChangeSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenWPF2"
        mc:Ignorable="d"
        Title="Выберите размер" Height="120" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Введите размер поля:" 
               FontSize="16"
               VerticalContentAlignment="Center"
               DockPanel.Dock="Left"/>
            <TextBox x:Name="sizeTextBox" 
                     FontSize="16" 
                     Margin="2,2,10,2" 
                     DockPanel.Dock="Right"/>
        </DockPanel>
        <Button x:Name="confirmButton" 
                HorizontalAlignment="Center" 
                Content="ОК" 
                VerticalAlignment="Center" 
                Padding="30,5,30,5"
                Click="ConfirmButtonClick"/>
    </DockPanel>
</Window>
